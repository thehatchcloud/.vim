execute pathogen#infect()
syntax on
filetype plugin indent on
colorscheme desert

set lines=35 columns=150
set number
set tabstop=8
set expandtab
set softtabstop=4
set shiftwidth=4
set background=dark
set foldmethod=indent
set foldlevel=99

map <c-j> <c-w>j
map <c-k> <c-w>k
map <c-l> <c-w>l
map <c-h> <c-w>h
map <c-u> :GundoToggle<CR>
